# Dev: Vite dev server with hot reload
FROM node:20-alpine

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci

COPY . .

EXPOSE 5173

# Install deps if node_modules missing (e.g. fresh volume), then start dev
CMD ["sh", "-c", "if [ ! -d node_modules ] || [ ! -f node_modules/.package-lock.json ]; then npm ci; fi && npm run dev -- --host 0.0.0.0 --port 5173"]
